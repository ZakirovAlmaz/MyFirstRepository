<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/main_menu_up" android:scaleType="fitStart" android:layout_alignParentTop="true" android:contentDescription="@string/app_name"/>
    <TableLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/menu_transparent" android:layout_weight="1" android:contentDescription="@string/app_name"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clickMenu1"
                android:src="@drawable/menu1"
                android:contentDescription="TODO" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/menu2"
                android:layout_weight="1"
                android:onClick="clickMenu2"
                android:contentDescription="TODO" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="@android:dimen/notification_large_icon_width"
                android:layout_marginBottom="10dp"
                android:autoText="false"
                android:background="#00FFFFFF"
                android:drawableStart="@android:drawable/ic_menu_preferences"
                android:gravity="center|left"
                android:onClick="clickSettings"
                android:text="   Настройки"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded" />
        </TableRow>
    </TableLayout>
</RelativeLayout>